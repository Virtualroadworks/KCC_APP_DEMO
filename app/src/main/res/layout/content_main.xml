<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView4" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="161dp"
                    android:layout_height="145dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView6"
                        android:src="@drawable/main_unlock_icon" />
                </FrameLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="LOGIN SUCCESSFUL"
                    android:id="@+id/textView55"
                    android:textSize="15dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentStart="false"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Greetings,"
                    android:id="@+id/textView102"
                    android:textSize="20dp"
                    android:layout_below="@+id/textView55"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_name"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:textColorHint="#B9959595"
                    android:hint="User Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Would you like to do a vehicle inspection?"
                    android:id="@+id/textView4"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Press the Button"
                    android:id="@+id/textView43"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:textColor="#000000" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="25dp">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/start_inspection_button"
                        android:background="@drawable/fab_button_effect"
                        android:layout_alignBottom="@+id/scrollView4"
                        android:layout_alignTop="@+id/scrollView4"
                        android:layout_gravity="center_horizontal"
                        android:onClick="buttonOnClick" />
                </FrameLayout>

            </LinearLayout>

        </FrameLayout>
    </ScrollView>

</RelativeLayout>