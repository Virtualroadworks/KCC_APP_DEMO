<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="361dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView6"
                        android:src="@drawable/main_unlock_icon"
                        tools:ignore="ContentDescription"
                        android:layout_gravity="center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login Successful,"
                            android:id="@+id/textView103"
                            android:textSize="30sp"
                            android:paddingTop="5dp"
                            android:textColor="@color/cast_expanded_controller_background_color"
                            android:paddingBottom="5dp"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/user_name"
                            android:textSize="40sp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColorHint="@color/cast_expanded_controller_background_color"
                            android:hint="User Name" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="Location Services"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="normal|bold"
                                    android:textColor="@color/cast_expanded_controller_background_color"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/gpsonlineiconxl"
                                    android:id="@+id/gpsonlineiconxl" />

                                <TextView
                                    android:text="Online"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/gps_check"
                                    android:gravity="center"
                                    android:textStyle="normal|bold"
                                    android:textColor="@color/cast_expanded_controller_background_color"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="Device"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="normal|bold"
                                    android:textColor="@color/cast_expanded_controller_background_color"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/onlineiconxl"
                                    android:id="@+id/onlineiconxl" />

                                <TextView
                                    android:text="Online"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/online_check"
                                    android:gravity="center"
                                    android:textStyle="normal|bold"
                                    android:textColor="@color/cast_expanded_controller_background_color"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Database"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="normal|bold"
                                android:textColor="@color/cast_expanded_controller_background_color"
                                android:textSize="20sp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/databaseonlineiconxl"
                                android:id="@+id/databaseonlineiconxl" />

                            <TextView
                                android:text="Online"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/database_check"
                                android:gravity="center"
                                android:textStyle="normal|bold"
                                android:textColor="@color/cast_expanded_controller_background_color"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="Last Database Sync:"
                                android:textAlignment="viewStart"
                                android:textColor="@color/cast_expanded_controller_background_color"
                                android:textSize="16sp"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:id="@+id/Database_Synctime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="Database Time"
                                android:textColor="@color/cast_expanded_controller_background_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="Installed App Build Version:"
                                android:textAlignment="viewStart"
                                android:textColor="@color/cast_expanded_controller_background_color"
                                android:textSize="16sp"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:id="@+id/app_build_version"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="1.0"
                                android:textColor="@color/cast_expanded_controller_background_color" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="Latest App Build Version:"
                                android:textAlignment="viewStart"
                                android:textColor="@color/cast_expanded_controller_background_color"
                                android:textSize="16sp"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:id="@+id/latest_app_build_version"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/cast_expanded_controller_background_color" />
                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/Lockoutuserframelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Egis_OK">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Greetings"
                            android:textAlignment="center"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/user_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:hint="User Name"
                            android:textAlignment="center"
                            android:textColor="@color/cast_libraries_material_featurehighlight_text_body_color"
                            android:textSize="40sp" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/lockouticon"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/textView41"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Please await"
                            android:textAlignment="center"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/textView40"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Activation"
                            android:textAlignment="center"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="to RSA APP"
                            android:textAlignment="center"
                            android:textColor="@color/cast_libraries_material_featurehighlight_text_body_color"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your access Level is"
                            android:textAlignment="center"
                            android:textColor="@color/cast_libraries_material_featurehighlight_text_body_color"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/access_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:hint="User Name"
                            android:textAlignment="center"
                            android:textColor="@color/cast_libraries_material_featurehighlight_text_body_color"
                            android:textSize="40sp" />

                    </LinearLayout>

                </FrameLayout>
            </FrameLayout>

        </FrameLayout>
    </ScrollView>

</RelativeLayout>