<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dccdrainageforms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.laptop.truckmanv5.dccdrainageforms"
    tools:showIn="@layout/activity_dccdrainageforms">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UnknownId,UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/dcc_logo_100dp"
                        tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry"
                        android:paddingLeft="20dp" />
                </FrameLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_height="10dp"
                android:background="@color/DCC_colour"
                android:layout_width="match_parent">

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                tools:ignore="UselessLeaf">

            </FrameLayout>

            <FrameLayout
                android:layout_height="30dp"
                android:background="@color/DCC_colour_3"
                android:layout_width="match_parent">

                <TextView
                    android:text="Drainage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:paddingLeft="20dp"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                    android:textAlignment="center"
                    android:background="@drawable/button_roundoff2" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="DisableBaselineAlignment">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/dcc_form_logo_60"
                            android:id="@+id/imageView10"
                            android:layout_gravity="center"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/dcc_database_logo_60"
                            android:id="@+id/imageView9"
                            android:layout_gravity="center"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Dailyvehiclewalkaroundcheckframelayout">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_height="20dp"
                        android:background="@drawable/button_roundoff4"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:text="Daily Vehicle walkaround checklist"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:paddingLeft="20dp"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                            android:textSize="12sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Level1access">

                        <FrameLayout
                            android:layout_height="20dp"
                            android:background="@drawable/button_roundoff"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right">

                            <TextView
                                android:text="Level 1 : Access"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/cardview_light_background"
                                android:paddingLeft="20dp"
                                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                                android:textSize="12sp"
                                android:paddingRight="20dp" />
                        </FrameLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <Button
                            android:text="Form : Vehicle Check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/form_Vehicle_check"
                            tools:ignore="ButtonStyle,HardcodedText"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:background="@drawable/button_roundoff5"
                            android:textSize="12sp"
                            android:elevation="7dp"
                            android:layout_margin="5dp" />

                        <Button
                            android:text="Database : Vehicle Checks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/database_Vehicle_check"
                            tools:ignore="ButtonStyle,HardcodedText"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:background="@drawable/button_roundoff3"
                            android:textSize="12sp"
                            android:layout_margin="5dp" />

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Inspectioncheckframelayout">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_height="20dp"
                        android:background="@drawable/button_roundoff4"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:text="Inspection Checklist"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:paddingLeft="20dp"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                            android:textSize="12sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Level1access">

                        <FrameLayout
                            android:layout_height="20dp"
                            android:background="@drawable/button_roundoff"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right">

                            <TextView
                                android:text="Level 1 : Access"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/cardview_light_background"
                                android:paddingLeft="20dp"
                                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                                android:textSize="12sp"
                                android:paddingRight="20dp" />
                        </FrameLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <Button
                            android:text="Form : Inspections"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/form_at0013_3"
                            tools:ignore="ButtonStyle,HardcodedText"
                            android:layout_weight="1"
                            android:elevation="12dp"
                            android:background="@drawable/button_roundoff5"
                            android:textSize="12sp"
                            android:layout_margin="5dp" />

                        <Button
                            android:text="Database : Inspections"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/database_at0013_3"
                            tools:ignore="ButtonStyle,HardcodedText"
                            android:layout_weight="1"
                            android:elevation="8dp"
                            android:background="@drawable/button_roundoff3"
                            android:textSize="12sp"
                            android:layout_margin="5dp" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Confinedspacecheckframelayout">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_height="20dp"
                        android:background="@drawable/button_roundoff4"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent">

                        <TextView
                            android:text="Confined Space Entry permit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:paddingLeft="20dp"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                            android:textSize="12sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Level1access">

                        <FrameLayout
                            android:layout_height="20dp"
                            android:background="@drawable/button_roundoff"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right">

                            <TextView
                                android:text="Level 1 + 2 : Access"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/cardview_light_background"
                                android:paddingLeft="20dp"
                                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                                android:textSize="12sp"
                                android:paddingRight="20dp" />
                        </FrameLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <Button
                            android:text="Form : Confined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/form_at0008_2"
                            tools:ignore="ButtonStyle,HardcodedText"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:background="@drawable/button_roundoff5"
                            android:textSize="12sp"
                            android:layout_margin="5dp" />

                        <Button
                            android:text="Database : Confined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/database_at0008_2"
                            tools:ignore="ButtonStyle,HardcodedText"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:background="@drawable/button_roundoff3"
                            android:textSize="12sp"
                            android:layout_margin="5dp" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Siteriskcheckframelayout">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_height="20dp"
                        android:background="@color/DCC_colour_2"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:text="Site Risk Assessments"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:paddingLeft="20dp"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                            android:textSize="12sp"
                            android:textAlignment="viewStart"
                            android:background="@drawable/button_roundoff4" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Level1access">

                        <FrameLayout
                            android:layout_height="20dp"
                            android:background="@drawable/button_roundoff"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right">

                            <TextView
                                android:text="Level 1 + 2 : Access"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/cardview_light_background"
                                android:paddingLeft="20dp"
                                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                                android:textSize="12sp"
                                android:paddingRight="20dp" />
                        </FrameLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <Button
                            android:text="Form : Site Risk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/AT_RiskAssessment_Form"
                            tools:ignore="ButtonStyle,HardcodedText"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:background="@drawable/button_roundoff5"
                            android:layout_margin="5dp"
                            android:textSize="12sp" />

                        <Button
                            android:text="Database : Site Risk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/AT_RiskAssessment_Database"
                            tools:ignore="ButtonStyle,HardcodedText"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:background="@drawable/button_roundoff3"
                            android:layout_margin="5dp"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/InspectManagementcheckframelayout">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_height="20dp"
                        android:background="@drawable/button_roundoff4"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:text="Management inspection Checklist"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:paddingLeft="20dp"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                            android:textSize="12sp"
                            android:textAlignment="viewStart" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Level1access">

                        <FrameLayout
                            android:layout_height="20dp"
                            android:background="@drawable/button_roundoff"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right">

                            <TextView
                                android:text="Level 1 + 2 + 3: Access"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/cardview_light_background"
                                android:paddingLeft="20dp"
                                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                                android:textSize="12sp"
                                android:paddingRight="20dp" />
                        </FrameLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <Button
                            android:text="Form : Management"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/form_at00011"
                            tools:ignore="ButtonStyle,HardcodedText"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:elevation="0dp"
                            android:background="@drawable/button_roundoff5"
                            android:layout_margin="5dp"
                            android:textSize="12sp" />

                        <Button
                            android:text="Database : Management"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/database_at00011"
                            tools:ignore="ButtonStyle,HardcodedText"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:background="@drawable/button_roundoff3"
                            android:layout_margin="5dp"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
